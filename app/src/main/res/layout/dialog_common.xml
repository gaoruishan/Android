<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/public_padding_20"
    android:layout_marginRight="@dimen/public_padding_20"
    android:background="@drawable/public_corner_bg_white"
    android:minHeight="90dp"
    android:minWidth="150dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/public_padding_20"
        android:layout_marginRight="@dimen/public_padding_20"
        android:layout_marginTop="@dimen/public_padding_10"
        android:gravity="center_horizontal"
        android:text="@string/dialog_title_default"
        android:textColor="@color/cor5"
        android:textSize="@dimen/size4" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/public_padding_20"
        android:layout_marginRight="@dimen/public_padding_20"
        android:paddingBottom="@dimen/public_padding_20"
        android:paddingTop="@dimen/public_padding_20" 
        android:orientation="vertical">

       <ImageView
            android:id="@+id/ani_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/public_padding_10"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dialog_spiner"
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/dialog_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="@string/dialog_msg_default"
            android:textColor="@color/cor4"
            android:textSize="@dimen/size4" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:alpha="0.6"
        android:background="@color/cor4" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_btn_height"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_bottom_left_radius"
            android:text="@string/cancel"
            android:textColor="@color/cor5"
            android:textSize="@dimen/size4" />

        <View
            android:id="@+id/divider"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:alpha="0.6"
            android:background="@color/cor4" />

        <Button
            android:id="@+id/dialog_ok_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_bottom_right_radius"
            android:text="@string/ok"
            android:textColor="@color/cor5"
            android:textSize="@dimen/size4" />
    </LinearLayout>

</LinearLayout>